<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.features.main.login.LogInActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|phone"
            android:ems="10"
            android:id="@+id/logInPhoneEdit"
            android:hint="Phone"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/logInToSVApedText"
            app:layout_constraintStart_toStartOf="@+id/logInToSVApedText" app:layout_constraintEnd_toEndOf="@+id/logInToSVApedText"
            app:layout_constraintHorizontal_bias="0.485"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textShortMessage|textPersonName|textPassword|textEmailAddress"
            android:ems="10"
            android:id="@+id/logInPassEdit"
            android:hint="Password" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/logInPhoneEdit"
            app:layout_constraintStart_toStartOf="@+id/logInPhoneEdit"
            app:layout_constraintEnd_toEndOf="@+id/logInPhoneEdit"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="LogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logInButton"
            app:layout_constraintTop_toBottomOf="@+id/logInPassEdit"
            app:layout_constraintStart_toStartOf="@+id/logInPassEdit"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/logInPassEdit"
            app:layout_constraintHorizontal_bias="0.538" android:layout_marginTop="30dp"/>
    <TextView
            android:text="Log in to SVAped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logInToSVApedText" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textStyle="bold"
            android:textSize="36sp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.3"/>
</androidx.constraintlayout.widget.ConstraintLayout>