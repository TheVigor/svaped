<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/tv_parking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Лешина парковка"/>

    <ImageView
            android:id="@+id/iv_parking_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_parking_name" />


    <TextView
            android:id="@+id/tv_parking_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/iv_parking_photo"
            app:layout_constraintTop_toBottomOf="@id/iv_parking_photo"
            app:layout_constraintEnd_toEndOf="@id/iv_parking_photo"
            tools:text="Заметка о парковке"/>

    <TextView
            android:id="@+id/tv_parking_city_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="12"/>

    <TextView
            android:id="@+id/tv_parking_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_parking_lng"
            tools:text="42.24"/>

    <TextView
            android:id="@+id/tv_parking_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="39.7"/>




</androidx.constraintlayout.widget.ConstraintLayout>