<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:listDivider">@color/dividerColor</item>
        <item name="android:divider">@color/dividerColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:shadowColor">@color/shadowColor</item>

        <!--Styles-->
<!--        <item name="switchStyle">@style/Widget.Moviemade.Switch</item>-->
<!--        <item name="materialCardViewStyle">@style/Widget.Moviemade.Card</item>-->

        <!--<item title="android:windowContentOverlay">@null</item>-->
    </style>

    <!--MainActivity Theme-->
    <style name="AppTheme.TransparentStatusBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="AppTheme">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">15dp</item>

        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="backgroundTint">@color/transparentColorAccent</item>
        <item name="elevation">0dp</item>
        <item name="pressedTranslationZ">0dp</item>
    </style>

</resources>
